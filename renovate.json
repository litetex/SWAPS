{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "rebaseWhen": "behind-base-branch",
  "packageRules": [
    {
      "description": "Stick with .NET LTS",
      "datasources": [
        "dotnet-version"
      ],
      "allowedVersions": "<=8"
    },
    {
      "description": "Stick with .NET LTS",
      "matchPackagePatterns": [
        "^System.ServiceProcess.ServiceController",
        "^dotnet" 
      ],
      "datasources": [
        "nuget"
      ],
      "allowedVersions": "<=8"
    }
  ]
}
